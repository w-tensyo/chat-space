.msg
  .msg-info
    %p.msg-info__name
      = message.user.name
    %p.msg-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p
    - if message.content.present?
      %p.msg-info__text
        = message.content
    = image_tag message.image.url, class: "msg-image" if message.image.present?
